.login-form
  width 400px
  margin 0 auto
  h2
    text-align center
  input
    display block
    width 100%
    height 40px
    line-height 40px
    margin-bottom 30px
    padding 0 20px
    box-sizing border-box
    &.password-input
      width 250px
      display inline-block
  button
    display inline-block
    &:last-child
      margin-left 40px
  .show-password
    display inline-block
    margin-left 20px

.go-to-register
  display inline-block
  margin-left 40px
.register-form
  width 400px
  margin 0 auto
  h2
    text-align center
  input
    display block
    width 100%
    height 40px
    line-height 40px
    margin-bottom 30px
    padding 0 20px
    box-sizing border-box
    &.password-input
      width 250px
      display inline-block
  .show-password
    display inline-block
    margin-left 20px

.not-found-wrapper
  padding 0 40px
  h2
    text-align center

.dashboard-wrapper
  text-align center
.form-wrapper
  width 800px
  margin 0 auto
  padding  20px 0
  border 1px solid #000
.password-edit
  width 400px
  margin 0 auto
  input
    display block
    width 100%
    height 40px
    padding 0 20px
    margin-bottom 20px
    line-height 40px
    font-size 16px
    box-sizing border-box
  button
    display block
    width 200px
    height 40px
    line-height 40px
    font-size 16px
    text-align center

.dasboard-wrapper
  h2
    padding-bottom 40px
    text-align center

.list-of-passwords
  width 800px
  margin 0 auto
  padding 30px 0 60px  

.password
  border 1px solid #000
  font-size 0
  line-height 0
  padding 5px 0px
  margin-bottom 5px
  text-align center
  span
    display inline-block
    text-align center
    width 33.333%
    font-size 18px
    line-height 20px
    padding 0 20px 10px
    box-sizing: border-box
  input 
    display inline-block
    width 33.333%
    font-size 18px
    line-height 20px
    padding 0 20px 10px
    text-align center
    border none
    box-sizing: border-box
  a
    display inline-block
    font-size 18px
    line-height 30px
    width 150px
    height 30px
    text-align center
    border-radius 10px
    text-decoration none
    color #000
    &.delete
      margin-right 20px
      border solid 2px red
    &.edit
      margin-right 20px
      border solid 2px blue
    &.show-password
      border solid 2px green

.exit
  display inline-block
  width 200px
  height 40px
  margin-top 40px
  line-height 40px
  font-size 22px
  text-align center
  background #B23015
  color white
  border-radius 15px
  text-decoration none

    

